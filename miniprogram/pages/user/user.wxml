<!--miniprogram/pages/user/user.wxml-->
<view class="page"  data-weui-theme="{{theme}}">
	<view class="page__bd">

		<view class="weui-cells">
        <view class="weui-cell weui-cell_active">
            <view class="weui-cell__hd" style="position: relative; margin-right: 10px;">
                <image src="{{avatarUrl}}" style="width: 50px; display: block;"></image>
            </view>
            <view class="weui-cell__bd">
                <view>{{nickName}}</view>
                <view style="font-size: 13px; color: #888;">微聊号: xxxxx</view>
            </view>
        </view>
		</view>
    
    <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell">
            <view class="weui-cell__bd">性别</view>
            <view class="weui-cell__ft">{{gender}}</view>
        </view>
        <view class="weui-cell">
            <view class="weui-cell__bd">地区</view>
            <view class="weui-cell__ft">{{province}} {{city}}</view>
        </view>
        <view class="weui-cell">
            <view class="weui-cell__bd">个性签名</view>
            <view class="weui-cell__ft">富婆，我超会</view>
        </view>
        <navigator url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__bd">更多</view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </navigator>        
    </view>

  </view>
</view>